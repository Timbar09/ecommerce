<section>
  <div class="container form__container flex flex-col jc-center p-2">
    <h2 class="form__title">Change your password<span>.</span></h2>

    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form flex flex-col gap-1" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form__field p-1 radius-md">
        <%= f.label :password, "New password" do %>
          Password 
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password" %>
      </div>

      <div class="form__actions flex jc-end">
        <%= f.submit "Change my password", class: "btn btn__primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>