<section>
  <div class="container form__container flex flex-col jc-center p-2">
    <h2 class="form__title">Forgot your password<span>?</span></h2>

    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form flex flex-col gap-1" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field p-1 radius-md">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address" %>
      </div>

      <div class="form__actions flex jc-end">
        <%= f.submit "Send me reset password instructions", class: "btn btn__primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
