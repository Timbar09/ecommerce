<div class="category__show">
  <header class="category__show--header">
    <div class="category__show--header__container flex ai-center">
      <div class="category__show--header__content flex-1 p-2">
        <h1><%= @admin_category.name %></h1>

        <p class="category__show--header__content--description"><%= @admin_category.description %></p>

        <ul class="category__show--header__actions flex-inline ai-center gap-1 radius-lg">
          <% @header_actions.each_with_index do |action, index| %>
            <li class="category__show--header__actions--item category__show--header__actions--item__<%= index == 0 ? "left" : index == 1 ? "middle" : "right" %>">
              <% if action[:method] == :delete %>
                <%= button_to action[:path].call(@admin_category), method: action[:method], class: "p-2" do %>
                  <%= render "shared/icon", name: action[:icon] %>
                  <span><%= action[:label] %></span>
                <% end %>
              <% else %>
                <%= link_to action[:path].call(@admin_category), class: "p-2" do %>
                  <%= render "shared/icon", name: action[:icon] %>
                  <span><%= action[:label] %></span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="category__show--header__image">
        <%= image_tag @admin_category.display_medium_image, class: "radius-lg" %>
      </div>
    </header>

    <div class="category__show--body p-2">
      <div class="category__show--body__container p-2 radius-lg">
        <h2><%= @admin_category.name %> Collection</h2>

        <% if @admin_category.products.any? %>
          <ul class="category__show--body__product--list flex gap-2 pt-2">
            <% @admin_category.products.each do |product| %>
              <li class="category__show--body__product--item radius-lg">
                <%= image_tag product.display_small_image, class: "radius-lg" %>
                <%= link_to admin_product_path(product) do %>
                  <h3><%= product.name %></h3>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No products found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
