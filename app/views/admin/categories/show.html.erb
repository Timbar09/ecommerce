<p style="color: green"><%= notice %></p>

<%= render "admin/categories/header" %>

<div class="category__show flex jc-center ai-center pd-y-2">
  <div class="category__show--card pd-2 radius-lg">
    <%= @admin_category.image.present? ? image_tag(@admin_category.image, class: "radius-md") : image_tag("https://via.placeholder.com/250", class: "radius-md") %>

    <%= render @admin_category %>

    <%= link_to "Edit this category", edit_admin_category_path(@admin_category) %> |
    <%= link_to "Back to categories", admin_categories_path %>

    <%= button_to "Destroy this category", admin_category_path(@admin_category), method: :delete, class: "btn btn__tertiary radius-md" %>
  </div>
</div>
