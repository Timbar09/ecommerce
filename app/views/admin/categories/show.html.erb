<%= render "admin/form_header", page: "Categories" %>

<div class="admin__content--card__container flex jc-center ai-center py-2">
  <div class="admin__content--card p-2 radius-lg">
    <%= @admin_category.image.present? ? image_tag(@admin_category.image, class: "admin__content--card__image radius-md") : image_tag("https://via.placeholder.com/250", class: "admin__content--card__image radius-md") %>

    <%= render @admin_category %>

    <%= link_to "Edit this category", edit_admin_category_path(@admin_category) %> |
    <%= link_to "Back to categories", admin_categories_path %>

    <%= button_to "Destroy this category", admin_category_path(@admin_category), method: :delete, class: "btn btn__tertiary radius-md" %>
  </div>
</div>
