<% paths = {
  "products" => admin_products_path,
  "categories" => admin_categories_path,
} %>

<header class="form__header flex ai-center jc-between pd-2">
  <%= link_to paths[page.downcase], class: "btn btn__tertiary radius-md flex ai-center gap-1" do %>
    <%= render "shared/icon", name: "chevron-left" %>

    <span>Back to <%= page %></span>
  <% end %>

  <h1><%= yield(:title) %></h1>
</header>