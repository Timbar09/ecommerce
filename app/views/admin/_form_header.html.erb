<% stocks_path = params[:product_id].present? ? admin_product_stocks_path(params[:product_id]) : nil %>
<% is_edit_page = params[:action] == "edit" %>

<% paths = {
  "products" => is_edit_page && @admin_product.present? ? admin_product_path(@admin_product) : admin_products_path,
  "categories" => is_edit_page && @admin_category.present? ? admin_category_path(@admin_category) : admin_categories_path,
  "stocks" => stocks_path
} %>

<header class="form__header flex ai-center jc-between p-2">
  <%= link_to paths[page.downcase], class: "radius-lg flex ai-center gap-1 p-1" do %>
    <%= render "shared/icon", name: "arrow-left" %>

    <span>Back to <%= is_edit_page ? page.singularize : page %></span>
  <% end %>
</header>