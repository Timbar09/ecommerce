<% stocks_path = params[:product_id].present? ? admin_product_stocks_path(params[:product_id]) : nil %>

<% paths = {
  "products" => admin_products_path,
  "categories" => admin_categories_path,
  "stocks" => stocks_path
} %>

<header class="form__header flex ai-center jc-between p-2">
  <%= link_to paths[page.downcase], class: "radius-md flex ai-center gap-1 p-1" do %>
    <%= render "shared/icon", name: "arrow-left" %>

    <span>Back to <%= page %></span>
  <% end %>
</header>