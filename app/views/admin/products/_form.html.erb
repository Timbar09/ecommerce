<%= form_with(model: [:admin, @admin_product], class: "form flex flex-col gap-1", data: { controller: "image-preview" }) do |form| %>
  <% if admin_product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
        <% admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex gap-1">
    <div class="form__field pd-x-1 pd-t-1 radius-md flex-1">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, autofocus: true, required: true, placeholder: "Product name" %>
    </div>

    <div class="form__field pd-x-1 pd-t-1 radius-md flex-1">
      <%= form.label :category_id, style: "display: block" %>
      <%= form.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: "Select a category" }, { required: true } %>
    </div>
  </div>

  <div class="form__field pd-x-1 pd-t-1 radius-md">
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description, required: true, placeholder: "Product description" %>
  </div>

  <div class="form__field pd-x-1 pd-y-1 radius-md">
    <div class="file__container flex ai-center gap-1">
      <label for="product_images" class="btn btn__secondary">Upload Image(s)</label>
      <%= form.file_field :images, multiple: true, id: "product_images", data: { image_preview_target: "input" } %>

      <div id="uploaded-images" class="image__list flex ai-center" data-image-preview-target="preview">
        No images uploaded
      </div>
    </div>

    <% if @admin_product.images.attached? %>
      <div class="image__list flex">
        <% @admin_product.images.each_with_index do |image, index| %>
          <div class="image__container">
            <%= label_tag "image_#{index}" do %>
              <%= check_box_tag "product[remove_images][]", image.id, false, id: "image_#{index}" %>
              <%= image_tag image.variant(:thumb), class: "radius-md" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex gap-1">
    <div class="form__field pd-x-1 pd-t-1 radius-md flex-1">
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price, required: true, placeholder: "Product price" %>
    </div>

    <div class="form__field form__checkbox pd-x-1 pd-t-1 radius-md">
      <%= form.label :active, style: "display: block" %>
      <%= form.checkbox :active %>
    </div>
  </div>

  <div class="form__actions flex jc-end">
    <%= form.submit(@admin_product.new_record? ? "Create Product" : "Update Product", class: "btn btn__primary") %>
  </div>
<% end %>
