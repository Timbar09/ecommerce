<%= form_with(model: [:admin, @admin_product], class: "form") do |form| %>
  <% if admin_product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
        <% admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="form__field">
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div class="form__field">
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, multiple: true %>
    <% if @admin_product.images.attached? %>
      <div class="form__field">
        <% @admin_product.images.each do |image| %>
          <%= image_tag image.variant(:thumb) %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form__field">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div class="form__field">
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select a Category" %>
  </div>

  <div class="form__field">
    <%= form.label :active, style: "display: block" %>
    <%= form.checkbox :active %>
  </div>

  <div class="form__actions">
    <%= form.submit %>
  </div>
<% end %>
