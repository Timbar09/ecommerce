<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<section class="category pd-b-2">
  <%= render 'admin/page_header', path: new_admin_product_path, title: "+ Add New product" %>

  <div id="admin_products">
    <% @admin_products.each do |admin_product| %>
      <%= render admin_product %>
      <p>
        <%= link_to "Show this product", admin_product_path(admin_product) %>
      </p>
    <% end %>
  </div>
</section>
