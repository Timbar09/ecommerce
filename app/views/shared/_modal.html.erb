<% type ||= "options" %>

<div class="modal flex-inline jc-end ai-start" data-controller="modal" data-modal-type="<%= type %>">
  <button class="modal__button" data-action="click->modal#toggle">
    <%= render 'shared/icon', name: "ellipsis" %>
  </button>

  <div class="modal__content hidden" data-modal-target="popup">
    <%= yield %>
  </div>
</div>